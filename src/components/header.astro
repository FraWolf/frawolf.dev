---
import SocialBtn from "./social-btn.astro";
import doggoAvatar from "../assets/doggo.jpg";
import { Image } from "astro:assets";

const socials = [
  {
    name: "GitHub",
    icon: "github",
    url: "https://github.com/FraWolf",
  },
  {
    name: "LinkedIn",
    icon: "linkedin",
    url: "https://www.linkedin.com/in/francesco-lombardo-454988163/",
  },
  {
    name: "Email",
    icon: "email",
    url: "mailto:francesco.lombardo1709@gmail.com",
  },
];
---

<section class="container mx-auto px-4 py-12 md:py-20">
  <div
    class="mb-12 flex flex-col items-center justify-center gap-4 md:flex-row"
  >
    <Image
      src={doggoAvatar}
      loading={"eager"}
      alt={"Profile pic"}
      class={"h-18 w-18 rounded-full object-cover"}
    />

    <div class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold md:text-4xl">Francesco Lombardo</h1>
      <p class="text-muted-foreground text-lg md:text-xl">
        Junior Full Stack Developer
      </p>
    </div>
  </div>

  <div class="mx-auto flex max-w-2xl flex-col items-center text-center">
    <p class="text-muted-foreground mb-8 text-base leading-relaxed">
      I build accessible, pixel-perfect digital experiences for the web.
      Specializing in modern JavaScript frameworks and creating seamless user
      interfaces.
    </p>
    <div class="flex flex-wrap justify-center gap-3">
      {
        socials.map((social) => {
          return <SocialBtn social={social} />;
        })
      }
    </div>
  </div>
</section>
