---
// import { ExternalLink } from "lucide-react";
import Pill from "./pill.astro";

interface Props {
  name: string;
  description: string;
  link?: string;
  technologies: string[];
}

const { name, description, link, technologies } = Astro.props;
---

<div
  class="group bg-card border border-border rounded-lg p-5 hover:border-primary/50 transition-colors"
>
  <div class="flex items-start justify-between gap-4 mb-3">
    <h3
      class="text-lg font-semibold group-hover:text-primary transition-colors"
    >
      {name}
    </h3>

    {
      !!link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground hover:text-primary transition-colors flex-shrink-0"
          aria-label={`View ${name} project`}
        >
          {/* <ExternalLink class="h-4 w-4" /> */}
        </a>
      )
    }
  </div>
  <p class="text-sm text-muted-foreground leading-relaxed mb-4">
    {description}
  </p>
  <div class="flex flex-wrap gap-2">
    {
      technologies.map((tech) => {
        return <Pill name={tech} />;
      })
    }
  </div>
</div>
